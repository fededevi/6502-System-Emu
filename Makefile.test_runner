# Makefile for 6502 test runner
CXX = g++
CXXFLAGS = -std=c++11 -Wall -O2
TARGET = test_runner

# Only compile cpu.cpp which includes all instruction implementations
SOURCES = test_runner.cpp \
          cpu.cpp \
          memory.cpp

OBJECTS = $(SOURCES:.cpp=.o)
HEADERS = cpu.h memory.h types.h

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJECTS)

%.o: %.cpp $(HEADERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET)

.PHONY: all clean
